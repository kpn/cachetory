{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "commitMessagePrefix": "OPT:",
  "commitMessageSuffix": "⬆️",
  "extends": [
    "group:allNonMajor",
    "schedule:earlyMondays"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "rangeStrategy": "widen"
    },
    {
      "matchDepTypes": [
        "dev",
        "docs"
      ],
      "rangeStrategy": "pin"
    }
  ]
}
